    <resultMap id="BaseResultMap" type="com.zc.bean.UserNotice">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="notice_id" jdbcType="INTEGER" property="noticeId"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
    </resultMap>
    <sql id="Base_Column_List">
         id,  notice_id,  user_id     </sql>
    <insert id="add" parameterType="com.zc.bean.UserNotice"
            useGeneratedKeys="true" keyProperty="id">
        insert into User_Notice
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="noticeId != null">
                notice_id,
            </if>
            <if test="userId != null">
                user_id,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="noticeId != null">
                #{noticeId,jdbcType=INTEGER},
            </if>
            <if test="userId != null">
                #{userId,jdbcType=INTEGER},
            </if>
        </trim>
    </insert>
    <delete id="del" parameterType="java.lang.Integer">
        delete from User_Notice
        where id =
        #{id,jdbcType= INTEGER}
    </delete>
    <update id="update" parameterType="com.zc.bean.UserNotice">
        update User_Notice
        <set>
            <if test="noticeId != null">
                notice_id = #{noticeId,jdbcType=INTEGER},
            </if>
            <if test="userId != null">
                user_id = #{userId,jdbcType=INTEGER},
            </if>
        </set>
        where id = #{id,jdbcType=INTEGER}
    </update>
    <select id="get" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from User_Notice
        where id = #{id,jdbcType=INTEGER}
    </select>



    <select id="getColl" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from User_Notice
        <if test="top != null">
            limit #{top,jdbcType=INTEGER}
        </if>
    </select>

    <select id="getByUserAndNotice" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from User_Notice
        where user_id = #{userId,jdbcType=INTEGER} and  notice_id = #{noticeId,jdbcType=INTEGER}
    </select>

